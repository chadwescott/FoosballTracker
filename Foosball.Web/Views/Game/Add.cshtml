@model Foosball.Web.Models.GameViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Add a Game</h2>
@if (Model.ShowSummary)
{
    <h1 class="label label-success">@Model.Summary</h1>
    <br />
    <br />
}

@using (Html.BeginForm("Add", "Game", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <div class="col-sm-2">
            @Html.LabelFor(model => model.Winner, new { @class = "control-label" })
        </div>
        <div class="col-sm-10">
            @Html.DropDownListFor(model => model.WinnerId, Model.Players, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-2">
            @Html.LabelFor(model => model.Loser, new { @class = "control-label" })
        </div>
        <div class="col-sm-10">
            @Html.DropDownListFor(model => model.LoserId, Model.Players, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-2">
            @Html.LabelFor(model => model.WinnerScore, new { @class = "control-label" })
        </div>
        <div class="col-sm-10">
            @Html.ValueFor(model => model.WinnerScore)
            @Html.HiddenFor(model => model.WinnerScore)
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-2">
            @Html.LabelFor(model => model.LoserScore, new { @class = "control-label" })
        </div>
        <div class="col-sm-10">
            <div class="row">
                <div id="LoserScoreDisplay" class="col-sm-1">@Html.ValueFor(model => model.LoserScore)</div>
                @Html.HiddenFor(model => model.LoserScore)
                <div class="col-sm-11 btn-group" role="group">
                    <button type="button" class="btn btn-default" onclick="setLoserScore(0);">0</button>
                    <button type="button" class="btn btn-default" onclick="setLoserScore(1);">1</button>
                    <button type="button" class="btn btn-default" onclick="setLoserScore(2);">2</button>
                    <button type="button" class="btn btn-default" onclick="setLoserScore(3);">3</button>
                    <button type="button" class="btn btn-default" onclick="setLoserScore(4);">4</button>
                    <button type="button" class="btn btn-default" onclick="setLoserScore(5);">5</button>
                    <button type="button" class="btn btn-default" onclick="setLoserScore(6);">6</button>
                    <button type="button" class="btn btn-default" onclick="setLoserScore(7);">7</button>
                    <button type="button" class="btn btn-default" onclick="setLoserScore(8);">8</button>
                    <button type="button" class="btn btn-default" onclick="setLoserScore(9);">9</button>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-12">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
}

<script>
    function setLoserScore(score) {
        $('#LoserScoreDisplay').text(score);
        $('#LoserScore').val(score);
    }
</script>