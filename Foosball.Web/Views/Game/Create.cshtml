@model Foosball.Web.Models.GameViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3>Create A Game</h3>

@using (Html.BeginForm("Create", "Game", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <div class="col-sm-2">
            @Html.LabelFor(model => model.Player1, new { @class = "control-label" })
        </div>
        <div class="col-sm-10">
            @Html.DropDownListFor(model => model.Player1Id, Model.Players, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-2">
            @Html.LabelFor(model => model.Player2, new { @class = "control-label" })
        </div>
        <div class="col-sm-10">
            @Html.DropDownListFor(model => model.Player2Id, Model.Players, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-2">
            @Html.LabelFor(model => model.Player1Score, new { @class = "control-label" })
        </div>
        <div class="col-sm-10">
            @Html.EditorFor(model => model.Player1Score, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-2">
            @Html.LabelFor(model => model.Player2Score, new { @class = "control-label" })
        </div>
        <div class="col-sm-10">
            @Html.EditorFor(model => model.Player2Score, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-12">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
}